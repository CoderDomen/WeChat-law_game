.register-popup-container {
	position: fixed;
	top: 0;
	left: 0;
	bottom: 0;
	right: 0;
	margin: 0 auto;
	z-index: 1000;
}

.popup-content {
	width: 726rpx;
	height: 711rpx;
	margin-top: 26.41vh;
	position: relative;
}

.popup-content .bg {
	height: 100%;
	width: 100%;
	position: absolute;
	top: 0;
	left: 24rpx;
}

.popup-content .closeBtn {
	width: 86rpx;
	height: 82rpx;
	position: absolute;
	top: 0;
	right: -22rpx;
	z-index: 999;
}

.content-title {
	position: relative;
	font-size: 40rpx;
	font-family: Microsoft YaHei;
	font-weight: bold;
	color: #fff;
	display: block;
	text-align: center;
	padding-top: 17rpx;
}

.popup-content .content {
	height: 100%;
	width: 100%;
	position: relative;
	box-sizing: border-box;
	left: 24rpx;
}

.popup-content .content .title {
	font-size: 40rpx;
	font-family: Microsoft YaHei;
	font-weight: bold;
	color: #fff;
	display: block;
	text-align: center;
	padding-top: 17rpx;
}

.popup-content .content .content-items {
	display: flex;
	justify-content: center;
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate3d(-50%, -50%, 0);
}
.content .content-items view {
	width: 213rpx;
	height: 289rpx;
	position: relative;
}
.content-items > view:first-child {
	margin-right: 81rpx;
}

.content-items > view > image {
	height: 100%;
	width: 100%;
	position: absolute;
	left: 0;
	top: 0;
}

.content-items .item {
	height: 100%;
	width: 100%;
	display: flex;
	flex-direction: column;
}

.content-items .item .coin {
	width: 119rpx;
	height: 107rpx;
	margin: 47rpx 0 0 47rpx;
}

.content-items .item .shield {
	width: 116rpx;
	height: 125rpx;
	margin: 29rpx 0 0 45rpx;
}

.content-items .item-title {
	display: block;
	text-align: center;
	margin-top: 9rpx;
	font-size: 37rpx;
	font-family: Microsoft YaHei;
	font-weight: 400;
	color: #fff;
}

.conitext {
	font-size: 33rpx;
	font-family: Microsoft YaHei;
	font-weight: 400;
	color: rgba(184, 125, 73, 1);
	margin-top: 30rpx;
	display: block;
	text-align: center;
}

.receiveBtn {
	text-align: center;
	margin-top: 57rpx;
}

.receiveBtn image {
	width: 228rpx;
	height: 97rpx;
}
