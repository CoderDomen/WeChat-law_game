.popup-container {
	position: absolute;
	top: 0;
	height: 100%;
	width: 100%;
	z-index: 1001;
	display: flex;
	flex-direction: column;
	align-items: center;
}

.logo {
    width: 31.52vh;
    height: 7.38vh;
	position: absolute;
	top: -3vh;
	left: 50%;
    /* margin-left: -17.27vh; */
    margin-left: -15.76vh;
}

.content-container {
	width: 668rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
	background: rgba(255, 255, 255, 1);
	border-radius: 27rpx;
    /* margin-top: 27.95vh; */
    margin-top: 25.95vh;
	box-sizing: border-box;
	/* overflow: hidden; */
	padding-top: 8.37vh;
    max-height: 55vh;
    position: relative;
}

.contentBox {
	height: 100%;
	width: 100%;
	overflow-x: hidden;
	overflow-y: auto;
}

.title {
	font-size: 44rpx;
	font-weight: 800;
	color: rgba(68, 68, 68, 1);
	display: block;
	align-self: flex-start;
	/* padding-top: 8.37vh; */
}

.title.right {
	padding: 0 46rpx;
}

.content {
	font-size: 31rpx;
	font-weight: 500;
	color: rgba(102, 102, 102, 1);
	display: block;
	margin-top: 2.21vh;
	line-height: 53rpx;
	align-self: flex-start;
	letter-spacing: 0.1vh;
}

.content.right {
	padding: 10rpx 46rpx;
}

.answer {
	align-self: flex-start;
	padding: 0 46rpx;
	box-sizing: border-box;
	width: 100%;
}

.answer .title {
	font-size: 44rpx;
	font-weight: 800;
	color: rgba(73, 216, 138, 1);
}

.answer .content {
	font-size: 31rpx;
	font-weight: 500;
	color: rgba(102, 102, 102, 1);
}

.explain {
	margin-top: 2vh;
	align-self: flex-start;
}

.explain .title {
	padding-top: 0;
	padding: 0 46rpx;
}

.explain .content {
	padding: 10rpx 46rpx;
}
.explain .closetip{
	position: absolute;
	right: 20rpx;
	bottom:20rpx;
	font-size: 34rpx;
	font-weight: 500;
	color: rgba(102, 102, 102, 1);
	display: block;
	align-self: flex-start;
}

