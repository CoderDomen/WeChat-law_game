.userInfo {
	width: 750rpx;
	height: 133rpx;
	position: relative;
	margin-top: 69rpx;
}

.my,
.enemy {
	width: 383rpx;
	height: 100%;
	position: absolute;
}

.my {
	top: 0;
	left: 0;
}

.enemy {
	top: 0;
	right: 0;
}

.bg {
	width: 100%;
	height: 100%;
	position: absolute;
}

.enemy-avatar,
.my-avatar {
	display: flex;
	position: relative;
	z-index: 999;
	align-items: flex-end;
	top: -27rpx;
}
.enemy-avatar {
	right: 27rpx;
	justify-content: flex-end;
}

.my-avatar {
	left: 27rpx;
}

.enemy-avatar .info,
.my-avatar .info {
	display: flex;
	flex-direction: column;
	width: 11.05vh;
}

.my-avatar .info {
	margin-left: 17rpx;
}

.enemy-avatar .info {
	margin-right: 17rpx;
}

.avatar {
	height: 129rpx;
	width: 129rpx;
	border-radius: 50%;
	background-color: #fff;
	box-sizing: border-box;
	padding: 10rpx;
	overflow: hidden;
}

.avatar .image {
	height: 100%;
	width: 100%;
	border-radius: 50% !important;
	overflow: hidden;
	display: block;
}

.name {
	font-size: 29rpx;
	font-weight: 500;
	color: rgba(251, 253, 255, 1);
	width: 100%;
	display: block;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}
.score {
	font-size: 40rpx;
	font-weight: 800;
	color: rgba(251, 253, 255, 1);
}

.timeDown {
	position: absolute;
	width: 120rpx;
	height: 120rpx;
	left: 50%;
	margin-left: -60rpx;
	background: rgba(255, 255, 255, 1);
	box-sizing: border-box;
	border: 4px solid rgba(58, 71, 136, 1);
	border-radius: 50%;
	top: 57rpx;
	display: flex;
	justify-content: center;
	align-items: center;
}

.count {
	width: 140rpx;
	height: 51rpx;
	line-height: 51rpx;
	text-align: center;
	background: rgba(0, 0, 0, 0.3);
	border-radius: 25px;
	font-size: 27rpx;
	font-weight: 500;
	color: rgba(79, 155, 253, 1);
	margin: 38rpx 0 0 28rpx;
}

.fright-content {
	position: absolute;
	top: 35.22vh;
	bottom: 0;
	left: 0;
	right: 0;
	margin: auto;
	overflow-y: auto;
	overflow-x: hidden;
	padding: 0 0 20rpx 0;
}

.subject {
	height: 100%;
	width: 100%;
	display: flex;
	flex-direction: column;
	align-items: center;
}

/* ---------------------------------------------------------------------- */

