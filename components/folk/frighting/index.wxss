.subject-item:nth-child(2) {
	margin: 2.77vh 0;
}
.subject-item:nth-child(3) {
	margin-bottom: 2.77vh;
}

.subject-item {
	width: 100%;
	line-height: 52rpx;
	/* text-align: center; */
	background-color: #fff;
	border-radius: 27px;
	font-size: 33rpx;
	font-weight: 800;
	color: rgba(54, 66, 129, 1);
	position: relative;
	box-sizing: border-box;
	padding: 30rpx 70rpx;
	display: flex;
	justify-content: center;
}

.subject-item.right {
	background: rgba(38, 225, 196, 1);
	color: #fff;
}

.subject-item.right::after {
	content: '';
	width: 27rpx;
	height: 27rpx;
	background-image: url('data:image/png;base64,');
	background-size: 100% 100%;
	position: absolute;
	top: 50%;
	right: 27rpx;
	transform: translate3d(0, -50%, 0);
}

.subject-item.error {
	background: rgba(253, 99, 99, 1);
	color: #fff;
}

.subject-item.error::before {
	content: '';
	width: 23rpx;
	height: 23rpx;
	background-image: url('data:image/png;base64,');
	background-size: 100% 100%;
	position: absolute;
	top: 50%;
	left: 26rpx;
	transform: translate3d(0, -50%, 0);
}

.tipPosi {
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate3d(-50%, -50%, 0);
}