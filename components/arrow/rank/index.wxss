.arrowLengend {
	width: 38.91vh;
	height: 8vh;
	margin-top: 8.62vh;
}

.roleLevel {
	margin-top: 2.7vh;
	opacity: 0;
}

.rank-wrapper {
    width: 100%;
    display: flex;
    justify-content: space-around;
}

.rank-item {
	display: flex;
	flex-direction: column;
    align-items: center;
}

.rank-item image {
	width: 5.54vh;
	height: 2.58vh;
}

.rank-item text {
	font-size: 27rpx;
	text-align: center;
	font-weight: 800;
    color: rgba(254, 252, 241, 1);
    margin-top: 0.1vh;
}

.rank-item .gk {
	font-size: 20rpx;
}

.continueBtn {
	width: 19.64vh;
	height: 6.15vh;
    margin-top: 5.91vh;
}

.rankBox {
	width: 90%;
	position: absolute;
	top: 75vh;
	left: 50%;
	text-align: center;
	transform: translate3d(-50%, 0, 0);
}

.fade_in {
    opacity: 0;
    animation: fadeIn 0.6s both;
}

@keyframes fadeIn {
    0% { opacity: 0; }
    100% { opacity: 1; }
}