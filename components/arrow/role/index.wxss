.gender {
	display: flex;
	margin-top: 3.87vh;
	align-items: center;
	color: #fff;
	width: 100%;
}

.gender .title {
	margin-right: 44rpx;
}

.gender-wrapper {
	display: flex;
	width: 251rpx;
	height: 60rpx;
	background-color: rgba(0, 0, 0, 0.3);
	border-radius: 8px;
	font-size: 33rpx;
	text-shadow: 1px 1px 1px #000;
	position: relative;
}

.gender-active {
	width: 148rpx;
	height: 5.11vh;
	position: absolute;
	top: 50%;
	/* 男 */
	/* left: -4%; */
	/* 女 */
	/* left: 46%; */
	transform: translate3d(0, -50%, 0);
	transition: left 0.2s ease;
}

.gender-wrapper view {
	flex: 1;
	display: flex;
	justify-content: center;
	align-items: center;
	position: relative;
}

