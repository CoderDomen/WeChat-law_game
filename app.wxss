page {
	width: 100vw;
	height: 100vh;
	overflow: hidden;
}
.container {
	width: 100%;
	height: 100%;
	position: relative;
}
.page-content {
	position: fixed;
	top: 0;
	right: 0;
	left: 0;
	bottom: 0;
	overflow-y: auto;
	overflow-x: hidden;
}
/* 图片组件做背景 */
.background {
	width: 100%;
	height: 100%;
	position: absolute;
	top: 0;
	left: 0;
}

.fade_in {
    opacity: 0;
    animation: fadeIn 0.6s both;
}

@keyframes fadeIn {
    0% { opacity: 0; }
    100% { opacity: 1; }
}
