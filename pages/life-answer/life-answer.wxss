.subject-pannel {
	width: 676rpx;
	height: 66.87vh;
	background: rgba(255, 255, 255, 1);
	border-radius: 27px;
    margin: 5.23vh auto 0 auto;
	box-sizing: border-box;
	transition: all 0.3s linear;
	position: relative;
}

.realTime {
	position: absolute;
	top: -5vh;
	left: 5vh;
	background-color: #fff;
	color: rgba(68, 104, 135, 1);
	font-weight: bold;
	padding: 10rpx 20rpx;
	border-radius: 50px;
	font-size: 25rpx;
}

.head {
	display: flex;
	/* margin: 3vh 3vh 0; */
	margin: 0 3vh 0;
	padding-top: 3vh;
	justify-content: flex-start;
	box-sizing: border-box;
	/* padding: 0 40rpx; */
	/* height: 18vh; */
}

.head .userInfo {
	display: flex;
	flex-direction: column;
}

.head .question {
	/* text-align: center; */
	font-size: 36rpx;
	color: rgba(68, 104, 135, 1);
	/* margin-top: 4.16vh; */
	/* overflow: auto; */
	width: 100%;
	word-wrap: break-word;
	word-break: normal;
	font-weight: 700;
}

.userInfo .avatar {
	width: 8.12vh;
	height: 9.72vh;
}

.userInfo .levelLabel {
	background: rgba(251, 161, 98, 1);
	border-radius: 16px;
	margin-top: 0.86vh;
	font-size: 23rpx;
	font-weight: bold;
	color: rgba(255, 255, 255, 1);
	text-align: center;
	padding: 5rpx 10rpx;
}

.options {
	margin-top: 1.69vh;
	box-sizing: border-box;
	padding: 0 3vh;
	/* overflow-y: auto; */
	height: 37.18vh;
}

.option-content {
	width: 100%;
	min-height: 100%;
}

.option:nth-child(2) {
	margin: 2.77vh 0;
}

.option:nth-child(3) {
	margin-bottom: 2.77vh;
}
.option:nth-child(4) {
	margin-bottom: 2.80vh;
}

