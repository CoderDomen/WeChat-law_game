.know {
	height: 100%;
	width: 100%;
	position: relative;
}
.know .video {
	width: 90.2%;
	/* height: 423rpx; */
	margin-top: 30px;
	margin-left: 5%;
	/* margin-bottom: 32rpx; */
	position: relative;
	overflow: hidden;
	height: 65.6vw;
  background-color:#fff;
  border-radius: 20px;
}


.know .video video, .know .video .intro {
	height: 100%;
	width: 100%;
}

.know .video .intro {
	box-sizing: border-box;
	padding: 40rpx;
	color: #fff;
	overflow: auto;
}

.know .video .time {
	width: 120rpx;
	height: 60rpx;
	position: absolute;
	right: 0;
	top: 10%;
	background-color: #fff;
	border-radius: 30px;
	padding-left: 36rpx;
	line-height: 60rpx;
	text-align: left;
	font-size: 33rpx;
	font-weight: 400;
	color: rgba(98, 143, 251, 1);
	opacity: 0;
	transform: translate3d(40%, 0, 0);
}

.know .title {
	font-size: 40rpx;
	font-weight: 500;
	color: #fff;
	margin-left: 25rpx;
}
.elseIntroBox {
	position: absolute;
	width: 682rpx;
	top: 538rpx;
	bottom: 0;
	left: 0;
	right: 0;
	margin: auto;
	overflow: hidden;
	background-color: #fff;
	border-radius: 20px 20px 0px 0px;
}
.elseIntroBox .bg {
	width: 100%;
	height: 101%;
	position: absolute;
}
.elseIntroBox .title {
	
	color: #446887;
		font-weight: bold;
		font-size: 40rpx;
		position: relative;
		z-index: 99;
		top: 25px;
		left: 25rpx;
		letter-spacing: 5rpx;
	}

.elseIntroBox .contentWrapper {
	position: absolute;
	top: 140rpx;
	bottom: 0;
	left: 0;
	right: 0;
	margin: auto;
	box-sizing: border-box;
	padding: 0 60rpx;
	overflow: auto;
}

.elseIntroBox .contentWrapper::-webkit-scrollbar {
	width: 0;
}

.elseIntroBox .content {
	position: relative;
	z-index: 99;
	box-sizing: border-box;
	display: flex;
	flex-direction: column;
	align-items: center;
}

