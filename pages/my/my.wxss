.my-container {
}

.content-wrapper {
	display: flex;
	flex-direction: column;
	align-items: center;
}
.info {
	width: 680rpx;
	background: rgba(0, 0, 0, 0.15);
	border-radius: 18px;
	margin-top: 20rpx;
	position: relative;
}

.moreInfo {
	width: 123rpx;
	height: 53rpx;
	position: absolute;
	right: 37rpx;
	top: 70rpx;
}

.avatarBox {
	display: flex;
	flex-direction: column;
	align-items: center;
	color: #fff;
	margin-top: 97rpx;
}
.avatarBox .avatar {
	width: 118rpx;
	height: 118rpx;
	box-sizing: border-box;
	background-color: #fff;
	padding: 10rpx;
	border-radius: 50%;
}

.avatarBox .title {
	margin-top: 20rpx;
}

.avatar image {
	height: 100%;
	width: 100%;
	overflow: hidden;
	border-radius: 50%;
}

.wealth {
	display: flex;
	justify-content: space-around;
	font-size: 32rpx;
	font-family: PingFang SC;
	font-weight: 500;
	color: #fff;
	margin-top: 64rpx;
	box-sizing: border-box;
	padding: 0 100rpx;
}
.wealth view {
	display: flex;
	align-items: center;
}
.coinIcon,
.shieldIcon {
	margin-right: 16rpx;
}
.wealth view .coinIcon {
	height: 58rpx;
	width: 53rpx;
}
.wealth view .shieldIcon {
	height: 48rpx;
	width: 52rpx;
}
.readlog {
	display: flex;
	justify-content: space-around;
	font-family: PingFang SC;
	color: #fff;
	margin-top: 56rpx;
	margin-bottom: 68rpx;
}
.readlog view {
	display: flex;
	flex-direction: column;
	align-items: center;
}

.readlog .num {
	font-size: 41rpx;
	font-weight: 500;
}

.readlog .text {
	margin-top: 30rpx;
	font-size: 25rpx;
	font-weight: 400;
	color: rgba(203, 203, 203, 1);
}

.goldRank {
	height: 47.29vh;
	width: 680rpx;
	background: rgba(0, 0, 0, 0.15);
	border-radius: 18px;
	margin-top: 28rpx;
	margin-bottom: 68rpx;
	overflow: hidden;
}

.goldRankContent {
	height: 100%;
	width: 100%;
	box-sizing: border-box;
	padding-bottom: 30rpx;
	overflow: auto;
}

.goldRankWrapper {
	display: flex;
	flex-direction: column;
	align-items: center;
}

.goldRank .title {
	width: 408rpx;
	height: 65rpx;
	margin-top: 41rpx;
}

.rank {
	margin-top: 40rpx;
	color: #fff;
}
.rank table {
	display: flex;
	flex-direction: column;
	align-items: center;
	text-align: center;
}
.rank tbody {
	width: 100%;
	font-family: PingFang SC;
	font-weight: 400;
	font-size: 25rpx;
}
.rank tr {
	display: flex;
	align-items: center;
	justify-content: space-between;
	padding: 0 10rpx;
	margin-top: 34rpx;
}
.rank .user {
	display: flex;
	align-items: center;
	justify-content: flex-start;
	padding-left: 16%;
	padding-right: 4%;
	width: 41%;
	text-align: left;
}

.rank .user text {
	flex: 1;
	white-space: nowrap;
	text-overflow: ellipsis;
	overflow: hidden;
}

.rank th {
	width: 620rpx;
	height: 62rpx;
	background: rgba(0, 0, 0, 0.15);
	border-radius: 31px;
	box-sizing: border-box;
	display: flex;
	align-items: center;
	justify-content: space-between;
	padding: 0 10rpx;
	font-size: 26rpx;
	color: rgba(203, 203, 203, 1);
}
.rank .rankIndex {
	font-size: 36rpx;
	font-weight: bold;
}
.rank .rankIndex.highlight {
	color: rgba(255, 197, 0, 1);
}
.rank .rank-avatar {
	width: 41rpx;
	height: 41rpx;
	margin-right: 16rpx;
	border-radius: 50%;
}
